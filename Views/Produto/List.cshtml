@{
}

@model List<aspnet_store.Models.Entities.Produto>

<h1> Produtos </h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Codigo EAN</th>
            <th>Preco Unitario</th>
            <th>Cota Minima</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.CodigoEAN</td>
                <td>@produto.PrecoUnitario</td>
                <td>@produto.CotaMinima</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Produto" asp-action="Edit" asp-route-id="@produto.Id"><i class="bi bi-pencil-fill"></i></a>
                    <a class="btn btn-danger" asp-controller="Produto" asp-action="Delete" asp-route-id="@produto.Id"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>