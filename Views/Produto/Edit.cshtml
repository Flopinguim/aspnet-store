@using aspnet_store.Models.ViewModels.ProdutoViewModels

@model AddProdutoViewModel

<h1>Editar Produto</h1>

@if (Model is null)
{
    <p>Produto não encontrado</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">EAN</label>
            <input type="text" class="form-control" asp-for="CodigoEAN" />
            <span asp-validation-for="CodigoEAN" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Fabricante</label>
            <input type="text" class="form-control" asp-for="Fabricante" />
            <span asp-validation-for="Fabricante" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Preço unitário</label>
            <input type="number" class="form-control" asp-for="PrecoUnitario" step="0.01" min="0" />
            <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Estoque</label>
            <input type="number" class="form-control" asp-for="Estoque" />
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("PrecoUnitario").addEventListener("input", function () {
            var preco = document.getElementById("PrecoUnitario").value;
            if (preco < 0) {
                alert("Preço não pode ser negativo.");
                document.getElementById("PrecoUnitario").value = "";
            }
        });
    </script>
}
