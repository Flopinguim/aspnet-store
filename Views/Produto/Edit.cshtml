@{
}

@model aspnet_store.Models.Entities.Produto

<h1>Editar Produto</h1>

@if (Model is null)
{
    <p>Produto não encontrado</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" />
        </div>

        <div class="mt-3">
            <label class="form-label">EAN</label>
            <input type="number" class="form-control" asp-for="CodigoEAN" />
        </div>

        <div class="mt-3">
            <label class="form-label">Preço unitário</label>
            <input type="number" class="form-control" asp-for="PrecoUnitario" />
        </div>

        <div class="mt-3">
            <label class="form-label">Cota mínima de estoque</label>
            <input type="number" class="form-control" asp-for="CotaMinima" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
}
