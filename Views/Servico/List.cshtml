@model List<aspnet_store.Models.Entities.Servico>

<div class="d-flex justify-content-between align-items-center mb-5">
    <h1> Serviços </h1>
    <a class="btn btn-primary mx-2" asp-controller="Servico" asp-action="Add">Cadastrar Novo Serviço</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Fornecedor</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Data Inicial</th>
            <th>Data Final</th>
            <th>Prazo de Entrega</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servico in Model)
        {
            <tr>
                <td>@servico.Nome</td>
                <td>@servico.Fornecedor.Nome</td>
                <td>@servico.Descricao</td>
                <td>@servico.Preco</td>
                <td>@servico.DataInicial.ToString("dd/MM/yyyy")</td>
                <td>@servico.DataFinal.ToString("dd/MM/yyyy")</td>
                <td>@servico.PrazoEntrega</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Servico" asp-action="Edit" asp-route-id="@servico.Id"><i class="bi bi-pencil-fill"></i></a>
                    <form asp-controller="Servico" asp-action="Delete" asp-route-id="@servico.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
